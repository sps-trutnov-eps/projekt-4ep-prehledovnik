<!DOCTYPE html>
    <%- include('../partials/head'); %>
    <style>
      .button {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        padding: 10px;
      }
      .tlacitko {
        margin: 20px 0;
        padding: 15px;
        /* background-color: #007bff;
        color: white; */
        border: none;
        border-radius: 5px;
        width: 100%;
        text-align: center;
        font-size: 16px;
      }
    </style>
    <article style="flex: 3; overflow-y: auto">
      <header>
        <nav>
          <ul>
            <li>
              <h1>PŽOP</h1>
            </li>
          </ul>
          <ul>
            <li>
              <div role="group">
                <button
                  hx-get="/maturity"
                  hx-target="body"
                  hx-push-url="true"
                  hx-swap="transition:true">
                PŽOP</button>
                <button
                  class="outline"
                  hx-get="/maturity/pcmz"
                  hx-target="body"
                  hx-push-url="true"
                  hx-swap="transition:true">
                PČMZ</button>
                <button
                  class="outline"
                  hx-get="/maturity/scmz"
                  hx-target="body"
                  hx-push-url="true"
                  hx-swap="transition:true">
                SČMZ</button>
                <button
                  class="outline"
                  hx-get="/maturity/sloh"
                  hx-target="body"
                  hx-push-url="true"
                  hx-swap="transition:true">
                SLOH</button>
              </div>
            </li>
          </ul>
        </nav>
      </header>
      <main>
        <form action="/maturity/ukladanipzop" method="POST" style="display: flex; flex-direction: column">
          <label for="den-konani">Den konání:</label>
          <input type="date" id="den-konani" name="den_konani" />

          <label for="dodatecne-dny">Dodatečné dny:</label>
          <input type="date" id="dodatecne-dny" name="dodatecne_dny" />

          <label for="ucebna">Učebna:</label>
          <select
            id="ucebna"
            name="ucebna"
            style="margin-bottom: 1em; padding: 0.5em">
            <option value="ucebna1">Učebna 1</option>
            <option value="ucebna2">Učebna 2</option>
            <option value="ucebna3">Učebna 3</option>
          </select>

          <div style="text-align: center">
            <button
              type="submit"
              style="
                padding: 0.5em;
                border: none;
                cursor: pointer;
                width: 150px;
              ">
              Uložit
            </button>
          </div>
        </form>
      </main>
    </article>

<%- include('../partials/tail') %>
