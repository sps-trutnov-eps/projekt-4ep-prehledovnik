<!DOCTYPE html>
<html lang="cs" style="max-height: 100vh; max-width: 100vw">
  <head style="flex: none">
    <%- include('../partials/head'); %>
  </head>
  <body
    style="
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow-y: none;
    ">
    <%- include('../partials/header'); %>
    <style>
      .button {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        padding: 10px;
      }
      .tlacitko {
        margin: 20px 0;
        padding: 15px;
        //background-color: #007bff;
        //color: white;
        border: none;
        border-radius: 5px;
        width: 100%;
        text-align: center;
        font-size: 16px;
      }
      table > thead > tr > th > p {
        font-size: 17px;
      }
      th {
        text-align: center;
      }

      .zaskrtavaci_policko {
        font-size: 50px;
      }

      input[type="date"] {
        border: none;
        text-align: center;
        font-size: 20px;
      }
    </style>

    <main
      style="
        padding: 1em;
        padding-bottom: 0;
        flex: auto;
        overflow-y: auto;
        display: flex;
      ">
      <article
        style="
          width: 20vw;
          min-width: 20vw;
          margin-right: 1em;
          overflow-y: auto;
          resize: horizontal;
        ">
        <h1>Sidebar</h1>

        <div class="button">
          <a href="../maturity/">
            <button class="tlacitko">PŽOP</button>
          </a>
          <a href="../maturity/pcmz">
            <button class="tlacitko">PČMZ</button>
          </a>
          <a href="../maturity/scmz">
            <button class="tlacitko">SČMZ</button>
          </a>
          <a href="../maturity/sloh">
            <button class="tlacitko">SLOH</button>
          </a>
        </div>
      </article>

      <article style="flex: 3; overflow-y: auto">
        <h1>PČMZ</h1>

        <form
          style="display: flex; flex-direction: column; align-items: center"
          id="projekt-form">
          <table
            style="border-collapse: collapse; text-align: center"
            id="hodiny-tabulka">
            <thead>
              <tr>
                <th style="text-align: center">Datum:</th>
                <th>
                  1.
                  <p>8:00-8:45</p>
                </th>
                <th>
                  2.
                  <p>8:50-9:35</p>
                </th>
                <th>
                  3.
                  <p>9:55-10:40</p>
                </th>
                <th>
                  4.
                  <p>10:50-11:35</p>
                </th>
                <th>
                  5.
                  <p>11:40-12:25</p>
                </th>
                <th>
                  6.
                  <p>12:35-13:20</p>
                </th>
                <th>
                  7.
                  <p>13:25-14:10</p>
                </th>
                <th>
                  8.
                  <p>14:15-15:00</p>
                </th>
                <th>
                  9.
                  <p>15:10-15:55</p>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <input
                    type="date"
                    name="datum-hodiny"
                    value="2024-03-15"
                    style="border: none; text-align: center" />
                </td>

                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina1" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina2" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina3" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina4" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina5" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina6" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina7" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina8" />
                </td>
                <td>
                  <input
                    class="zaskrtavaci_policko"
                    type="checkbox"
                    name="hodina9" />
                </td>
              </tr>
            </tbody>
          </table>

          <div style="margin-top: 1em">
            <button
              type="button"
              id="pridat-datum"
              style="
                padding: 0.5em;
                width: 150px;
                border: none;
                cursor: pointer;
              ">
              Přidat datum
            </button>
          </div>

          <div style="margin-top: 1em">
            <button
              type="submit"
              style="
                padding: 0.5em;
                width: 150px;
                border: none;
                cursor: pointer;
              ">
              Uložit
            </button>
          </div>
        </form>
      </article>
    </main>

    <script>
      document
        .getElementById("pridat-datum")
        .addEventListener("click", function () {
          var tabulka = document
            .getElementById("hodiny-tabulka")
            .getElementsByTagName("tbody")[0];
          var novyRadek = document.createElement("tr");

          var bunkaDatum = document.createElement("td");
          var inputDatum = document.createElement("input");
          inputDatum.type = "date";
          inputDatum.name = "datum-hodiny";
          inputDatum.classList.add("zaskrtavaci_policko");
          bunkaDatum.appendChild(inputDatum);
          novyRadek.appendChild(bunkaDatum);

          for (var i = 1; i <= 9; i++) {
            var bunkaCheckbox = document.createElement("td");
            var inputCheckbox = document.createElement("input");
            inputCheckbox.type = "checkbox";
            inputCheckbox.name = "hodina" + i;
            inputCheckbox.classList.add("zaskrtavaci_policko");
            bunkaCheckbox.appendChild(inputCheckbox);
            novyRadek.appendChild(bunkaCheckbox);
          }

          tabulka.appendChild(novyRadek);
        });
    </script>
  </body>
</html>
