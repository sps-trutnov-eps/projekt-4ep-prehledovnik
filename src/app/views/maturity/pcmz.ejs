<!DOCTYPE html>
<html lang="cs">
  <%- include('../partials/head'); %>
  <style>
    .button {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      width: 100%;
      padding: 10px;
    }

    .tlacitko {
      margin: 8px 0;
      padding: 15px;
      border: none;
      border-radius: 5px;
      width: 100%;
      text-align: center;
      font-size: 16px;
    }

    table > thead > tr > th > p {
      font-size: 17px;
    }

    th {
      text-align: center;
    }

    .zaskrtavaci_policko {
      font-size: 50px;
    }

    input[type="date"] {
      border: none;
      text-align: center;
      font-size: 20px;
    }

    input[disabled] {
      background-color: transparent;
      opacity: 0.5;
    }

    /* Styl podtržení nadpisu */
    .headline-container {
      position: relative;
      padding: 10px;
    }

    .headline {
      display: inline-block;
      color: white;
      font-size: 1.5em;
    }

    .headline-container::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: white;
    }

    /* Styl pro readonly checkbox */
    input[type="checkbox"][readonly] {
      pointer-events: none; /* Zakáže klikání */
    }
    
  header {
      display: flex;
  }
  
  header > div:nth-of-type(1) {
      flex: 1;
      text-align: left;
  }
  header > div:nth-of-type(2) {
      flex: 1;
      display: flex;
      justify-content: right;
  }
  header > div:nth-of-type(2) > button {
    width: 5em;
  }
  header > div:nth-of-type(3) {
      flex: 1;
  }
  
  #save-button {
      margin-right: 1em;
  }
  #edit-button {
      margin-right: 1em;
  }
  </style>

    <article style="flex: 3; overflow-y: auto;">
    <header>
       
      <div>
        <h1>Maturity</h1>
      </div>
      
      <div>
        <button
          type="submit"
          form="mform"
          id="save-button"
          class="editbutton"
          style="display:none">
          Uložit
        </button>
        <button
          type="button"
          id="edit-button"
          class="editbutton"
          onclick="toggleEdit()">
          Změnit
        </button>
      </div>
      
      <div>
        <div role="group">
          <button
            class="outline"
            onclick="window.location.href='/maturity'"
            hx-target="body"
            hx-push-url="true"
            >
          Praktická</button>
          <button
            onclick="window.location.href='/maturity/pcmz'"
            hx-target="body"
            hx-push-url="true"
            >
          Ústní</button>
          <button
            class="outline"
            onclick="window.location.href='/maturity/scmz'"
            hx-target="body"
            hx-push-url="true"
            >
          Státní</button>
          <button
            class="outline"
            onclick="window.location.href='/maturity/sloh'"
            hx-target="body"
            hx-push-url="true"
            >
          Sloh</button>
        </div>
      </div>
      
    </header>
    
      <main>
          <h2>Profilová část maturitní zkoušky</h2>
        <form
          id="mform"
          action="/maturity/ukladanipcmz"
          method="POST"
          style="display: flex; flex-direction: column; align-items: center">
          <table
            style="border-collapse: collapse; text-align: center"
            id="hodiny_tabulka">
            <thead>
              <tr>
                <th style="text-align: center;">Datum</th>
                <th style="text-align: center;">
                  1
                  <p>8:00-8:45</p>
                </th>
                <th style="text-align: center;">
                  2
                  <p>8:50-9:35</p>
                </th>
                <th style="text-align: center;">
                  3
                  <p>9:55-10:40</p>
                </th>
                <th style="text-align: center;">
                  4
                  <p>10:50-11:35</p>
                </th>
                <th style="text-align: center;">
                  5
                  <p>11:40-12:25</p>
                </th>
                <th style="text-align: center;">
                  6
                  <p>12:35-13:20</p>
                </th>
                <th style="text-align: center;">
                  7
                  <p>13:25-14:10</p>
                </th>
                <th style="text-align: center;">
                  8
                  <p>14:15-15:00</p>
                </th>
                <th style="text-align: center;">
                  9
                  <p>15:10-15:55</p>
                </th>
              </tr>
            </thead>
            <tbody>
              <% let dayCounter = 1; %> <% for (const [datum, hodiny] of
              Object.entries(data)) { %>
              <tr>
                <td>
                  <input
                    type="date"
                    name="den<%= dayCounter %>_datum"
                    value="<%= datum %>"
                    readonly />
                </td>
                <% for (let i = 1; i <= 9; i++) { %>
                <td style="text-align: center;">
                  <input class="zaskrtavaci_policko" type="checkbox"
                  name="den<%= dayCounter %>_hodina<%= i %>" <%= hodiny.includes(i) ? "checked" : "" %> readonly />
                </td>
                <% } %>
              </tr>
              <% dayCounter++; %> <% } %>
            </tbody>
          </table>

            <button
              type="button"
              id="pridat-datum"
              style="padding: 0.5em; width: 150px; border: none; cursor: pointer;"
              disabled>
              Přidat datum
            </button>

            <button
              type="submit"
              id="save-button"
              style="display: none; padding: 0.5em; width: 150px; border: none; cursor: pointer;">
              Uložit
            </button>
        </form>
      </main>
    </article>

    <script src="/maturita/js/pcmz.js"></script>

    <%- include('../partials/tail'); %>
