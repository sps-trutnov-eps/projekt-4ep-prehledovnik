            if (feature1 && feature2 && feature3 && goal1 && goal2 && bonus) {
                alert(`Featury: ${feature1}, ${feature2}, ${feature3}\ngoal: ${goal1}, ${goal2}\nBonus: ${bonus}`);
            } else {
                alert('Prosím, vyplňte všechna pole pro pitch.');
            }
        }
    </script>
</body>
</html>
