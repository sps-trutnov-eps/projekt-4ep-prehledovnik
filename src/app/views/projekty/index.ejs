<!DOCTYPE html>
<html lang="cs">
<%- include('../partials/head.ejs'); %>

<style>
   /* Your existing CSS styles here */
   body {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      min-height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
   }

   .header {
      width: 100%;
      padding: 10px;
      box-sizing: border-box;
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: fixed;
      top: 0;
      left: 0;
   }

   .navbar {
      display: flex;
      justify-content: flex-start;
      padding: 10px;
      width: 100%;
      box-sizing: border-box;
   }

   .navbar button {
      margin-right: 10px;
      padding: 10px 20px;
      font-size: 14px;
      cursor: pointer;
      border: none;
   }

   .levy_panel {
      padding: 20px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
   }

   .levy_panel button {
      width: 100%;
      padding: 15px;
      font-size: 18px;
      margin-bottom: 20px;
      cursor: pointer;
      border: none;
   }

   .main-content {
      padding: 20px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
   }

   .main-heading {
      font-size: 48px;
      font-weight: bold;
      margin-bottom: 20px;
      text-align: center;
   }

   .divider {
      width: 100%;
      height: 2px;
      margin-bottom: 20px;
   }

   .phase {
      font-size: 36px;
      font-weight: bold;
      margin-bottom: 20px;
      text-align: center;
   }

   table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
   }

   th, td {
      border: 1px solid #444;
      padding: 10px;
      text-align: center;
      font-size: 16px;
   }

   .table-button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
   }

   .project-button {
      margin-right: 10px;
      padding: 10px 20px;
      font-size: 14px;
      cursor: pointer;
      border: none;
      background-color: #007BFF; /* Modrá barva */
      color: white;
      transition: background-color 0.3s;
   }

   .project-button:hover {
      background-color: #0056b3; /* Tmavší modrá při najetí */
   }
</style>
<link rel="stylesheet" href="/osnovy/css/main.css" />

<body>
<article
   class="levy_panel"
   style="
      width: 20vw;
      min-width: 20vw;
      margin-right: 1em;
      overflow-y: auto;
      resize: horizontal;
  ">
  <a href="../projekty/tymy">
      <button>Týmy</button>
  </a>
  
  <a href="../projekty/vytvoreniProjektu">
      <button>Vytvoření projektu</button>
  </a>
  <%- tlacitka %>
</article>

<article class="main-content" style="flex: 3; overflow-y: auto">
   <h1 class="main-heading">Hlavní menu</h1>
   <div class="divider"></div>
   <div class="phase">Fáze</div>
   <table>
		<% let radkyHeader = ["členové", "pitch", "m1", "m2", "m3", "m4", "m5", "m6", "prezentace", "hodnocení"]; %>
		<% for (let r = 0; r < radkyHeader.length+1; r += 1){ %>
			<tr>
				<% for (let s = 0; s < tymy.length+1; s += 1){ %>
					<th>
						<% if (s == 0) {%>
							<% if (r == 0) {%> <button class="table-button">Upload</button> 
							<% } else { %>
								<%= radkyHeader[r-1] %>
							<% } %>
						<% } else { %>
							<% if (r == 0) {%> <%= tymy[s-1].name %> <% } %>
							<% if (r == 1) {%> <%= tymy[s-1].members %> <% } %>
						<% } %>
					</th>
				<% } %>
			</tr>
		<% } %>
   </table>
</article>

<%- include('../partials/tail') %>
</body>
</html>
