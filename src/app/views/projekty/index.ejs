   body {
    display: flex;
    justify-content: flex-start;
    min-height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #1e1e1e;
    color: #ffffff;
}

.levy_panel {
    width: 200px;
    background-color: #2e2e2e;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; /* Změněno na centrum */
    border-radius: 8px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}

.levy_panel button {
    width: 100%;
    padding: 15px;
    font-size: 18px;
    margin-bottom: 20px;
    cursor: pointer;
    background-color: #007bff;
    border: none;
    border-radius: 8px;
    color: #ffffff;
}

.main-content {
    margin-left: 220px;
    padding: 20px;
    box-sizing: border-box;
    width: calc(100% - 220px);
    display: flex;
    flex-direction: column;
    align-items: center; /* Zarovnáno na střed */
    justify-content: flex-start;
    height: 100vh;
    background-color: #1e1e1e;
}

.main-heading {
    font-size: 48px; /* Zvětšeno */
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center; /* Zarovnáno na střed */
}

.divider {
    width: 100%;
    height: 2px;
    background-color: #ddd;
    margin-bottom: 20px;
}

.phase {
    font-size: 36px; /* Zvětšeno */
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center; /* Zarovnáno na střed */
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background-color: #2e2e2e;
    color: #ffffff;
}

th, td {
    border: 1px solid #444;
    padding: 10px;
    text-align: center;
    font-size: 16px;
}

th {
    background-color: #444;
}

.table-button {
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    color: #ffffff;
}

