<!doctype html>
<%- include('../partials/head'); %>

    <style>
        body:first-of-type article {
            margin-right: 1em;
            width: 20vw;
            min-width: 20vw;
        }

        .articlesecond {
            flex: 3;
        }

        .timetable {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
        }

        .timetable thead th {
            padding: 10px;
        }

        .timetable th,
        .timetable td {
            text-align: center;
            vertical-align: middle;
        }


        .timetable-btn {
            width: 100%;
            height: 100%;
            cursor: pointer;
            font-size: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-sizing: border-box;
        }

        .timetable {
            border: none;
        }

        .btn-save {
            border: none;
            width: 100%;
