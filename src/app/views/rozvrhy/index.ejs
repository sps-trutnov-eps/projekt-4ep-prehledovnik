        }

        .btn-del {
            border: none;
            width: 100%;
            margin-top: 10px;
            background-color: #B90E0A;
        }

        .btn-new {
            border: none;
            width: 100%;
            margin-top: 10px;
            background-color: #4CAF50;
        }

