            <script>
                let casHodiny;
                let denHodiny;

                function showPopup(cas, den) {
                    casHodiny = cas;
                    denHodiny = den;
                    document.getElementById("popupModal").style.display = "block";
                }
            
                function closePopup() {
                    document.getElementById("popupModal").style.display = "none";
                }
            
               
                window.onclick = function(event) {
                    var modal = document.getElementById("popupModal");
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }

                function potvrditHodinu() {
                    const predmet = document.getElementById('jakypredmet').value;
                    const ucebna = document.getElementById('mistnost').value;  
                    const cas = casHodiny;
                    const den = denHodiny;
                    const skupina = document.getElementById('skupina').value;

                    ulozitHodinu(cas, den, predmet, ucebna, skupina);

                    closePopup();
                }

                function ulozitHodinu(cas, den, predmet, ucebna, skupina) {
                    const rozvrhy = {
                        "nextID": 1,
                        "hodiny": []
                    };

                    const novaHodina = {
                        "id": rozvrhy.nextID,
                        "den": den,
                        "cas": cas,
                        "predmet": predmet,
                        "ucebna": ucebna,
                        "skupina": skupina
                    };

                    rozvrhy.hodiny.push(novaHodina);
                    
                    rozvrhy.nextID++;

                    console.log(rozvrhy);
                }
