<!DOCTYPE html>
<%- include('../partials/head'); %>
<style>
  .grid-item .class {
    position: absolute;
    top: 5px;
    left: 5px;
    font-size: 12px;
    font-weight: bold;
    color: #76baff;
  }

  .grid-item .group {
    position: absolute;
    top: 20px;
    left: 5px;
    font-size: 12px;
    font-weight: bold;
    color: #76baff;
  }

  .grid-item .room {
    position: absolute;
    top: 5px;
    right: 5px;
    font-size: 12px; 
    color: #76baff;
    font-weight: bold;
  }

  .grid-item .period {
    margin-top: 30px;
    margin-bottom: 0;
    padding-bottom: 0;
    
    font-size: 18px;
    font-weight: bold;
    color: #0172ad;
  }

  #detailButton {
    position: absolute;
    bottom: 5px;
    width: 90%;
    padding: 0;
    height: 30px;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 70px repeat(10, 1fr);
  }

  .grid-item {
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding-inline: 5px;
    padding-block: 10px;
    padding: 5px;
    margin: 0;
    font-size: 18px;
    text-align: center;
    vertical-align: middle;
    align-items: center;
    position: relative;
    display: flex;
    flex-direction: column;
    font-size: 18px;
  }

  .grid-item-h {
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding: 15px;
    margin: 0;
    font-size: 18px;
    text-align: center;
  }

  .grid-item-h-ct {
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding: 15px;
    margin: 0;
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #naAktualniButton {
    margin-right: 2em;
    border-radius: var(--pico-border-radius);
  }

  #naMesicButon {
    border-top-left-radius: var(--pico-border-radius);
    border-bottom-left-radius: var(--pico-border-radius);
  }

  .cislo-hodiny {
    color: #0172ad;
    font-size: 20px;
    font-weight: bold;
  }

  .den-tydne {
    padding-inline: 0;
    padding-block: 30px;
    text-align: center;
    font-size: 18px;
  }

  #detail {
    display: none;
    position: fixed;
    top: 50%;    left: 50%;    transform: translate(-50%, -50%);
    width: 400px;
    background-color: var(--pico-card-background-color);
    border-radius: 8px;
    padding: 24px;
    padding-bottom: 80px;
    z-index: 1000;
    text-align: center;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
  }

  .detailItem {
    font-weight: bold;
    margin: 12px 0;
    padding: 8px 0;
  }

  .detailItem::before {
    display: block;
    margin-bottom: 4px;
  }

  .detailCloseButton {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #ff4444;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 24px;
    padding: 8px 40px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .detailCloseButton:hover {
    background-color: #ff0000;
  }

  @media (prefers-color-scheme: dark) {
    #detail {
      background-color: #1a1a1a;
    }

    .detailItem {
      color: #e0e0e0;
    }

    .detailItem::before {
      color: #999;
    }
  }
    
  header {
    display: flex;
  }
    
  header > div:nth-of-type(1) {
    flex: 1;
    text-align: left;
  }

  header > div:nth-of-type(2) {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  header > div:nth-of-type(3) {
    flex: 1;
  }
    
  #rightSide > button {
    margin-left: 16em;
  }

  #months {
    margin: 0;
    padding: 0;
    padding-left: 0.6em;
  }

  .event-button {
    width: 90%;
    margin-top: 5px;
    padding: 5px;
    border-radius: 4px;
    background-color: #ff9800;
    color: white;
    border: none;
    cursor: pointer;
  }

  .event-button:hover {
    background-color: #f57c00;
  }

  .event-type {
    display: none;
  }

  .event-target {
    display: none;
  }
</style>

<script>
  function scrollToCurrent() {
      const increment = 24 * 60 * 60 * 1000
      let today = new Date();
      if(Number(today.getDay()) == 0)
          today = new Date(Number(today.getTime()) - increment*2)

      let formattedDate = `${today.getDate()}.${today.getMonth() + 1}.`
      let element = document.getElementById(formattedDate);

      if (element) {
          element.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } else {
          console.error("Element pro aktuální datum nebyl nalezen.");
      }
  }

  function scrollToMonth() {
      const select = document.getElementById("months");
      const month = select.value;
      const year = (month < 8) ? 2025 : 2024;
      let selected = document.getElementById(`1.${month}.`);

      if (selected) {
          selected.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } else {
          selected = document.getElementById(`${year}-${month.padStart(2, '0')}-02`);
          selected.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
  }

  function detailDisplay(button) {
      let detail = document.getElementById("detail")
      detail.style.display = "block"

      const period = button.parentNode
      document.getElementById("countDet").innerText = period.querySelector(".count").textContent
      document.getElementById("themeDet").innerText = period.querySelector(".theme").textContent
  }

  function detailOff() {
      document.getElementById("detail").style.display = "none"
  }

  function showEventDetail(button) {
    let detail = document.getElementById("detail");
    detail.style.display = "block";

    const eventType = button.querySelector(".event-type").textContent;
    const eventTarget = button.querySelector(".event-target")?.textContent || "";
    const eventNote = button.querySelector(".event-note")?.textContent || "";

    document.getElementById("countDet").innerText = `Typ: ${eventType}`;
    document.getElementById("themeDet").innerText = eventTarget ? `Týká se: ${eventTarget}` : "";
    if (eventNote) {
      document.getElementById("themeDet").innerText += `\nPoznámka: ${eventNote}`;
    }
  }
</script>

<article style="flex: 3; overflow-y: auto; padding: 0;">
   <header>
      <div>
        <h1>Kalendář</h1>
      </div>
      
      <div>
        <button id="naAktualniButton" onclick="scrollToCurrent()">Aktuální</button>
        <button id="naMesicButon" onclick="scrollToMonth()">Na&nbsp;měsíc</button>
        <select name="months" id="months">
            <option value="8">Srpen</option>
            <option value="9">Září</option>
            <option value="10">Říjen</option>
            <option value="11">Listopad</option>
            <option value="12">Prosinec</option>
            <option value="1">Leden</option>
            <option value="2">Únor</option>
            <option value="3">Březen</option>
            <option value="4">Duben</option>
            <option value="5">Květen</option>
            <option value="6">Červen</option>
            <option value="7">Červenec</option>
        </select>
      </div>
      
      <div>
        <div role="group" id="rightSide">
          <button class="outline" onclick="window.location.href='/kalendar'" hx-target="body" hx-push-url="true" hx-swap="transition:true">
            Na měsíční
          </button>
        </div>
      </div>
   </header>

   <main>
     <div>
       <div id="detail">
         <p id="countDet" class="detailItem"></p>
         <p id="themeDet" class="detailItem"></p>
         <button class="detailCloseButton" onclick="detailOff()">Zavřít</button>
       </div>

       <% 
       // Group struktury by week ensuring weeks start with Monday
       let weeks = [];
       let currentWeek = null;
       let currentDays = [];
       
       struktury.forEach(den => {
         if (den.den !== 'So' && den.den !== 'Ne') {
           // If it's Monday or we don't have a current week yet
           if (den.den === 'Po' || currentWeek === null) {
             // If we have days from previous week, save them
             if (currentDays.length > 0) {
               weeks.push({
                 tyden: currentWeek,
                 dny: currentDays
               });
             }
             // Start new week
             currentWeek = den.tyden;
             currentDays = [den];
           } else {
             // Add to current week
             currentDays.push(den);
           }
         }
       });
       
       // Add the last week if it has any days
       if (currentDays.length > 0) {
         weeks.push({
           tyden: currentWeek,
           dny: currentDays
         });
       }
       %>

       <% weeks.forEach(({tyden, dny}) => { %>
         <section class="grid-container">
           <p class="grid-item-h-ct" id="cisloTydne"><%= tyden %></p>
           <p class="grid-item-h"><span class="cislo-hodiny">0</span><br>7:10-7:55</p>
           <p class="grid-item-h"><span class="cislo-hodiny">1</span><br>8:00-8:45</p>
           <p class="grid-item-h"><span class="cislo-hodiny">2</span><br>8:50-9:35</p>
           <p class="grid-item-h"><span class="cislo-hodiny">3</span><br>9:55-10:40</p>
           <p class="grid-item-h"><span class="cislo-hodiny">4</span><br>10:50-11:35</p>
           <p class="grid-item-h"><span class="cislo-hodiny">5</span><br>11:40-12:25</p>
           <p class="grid-item-h"><span class="cislo-hodiny">6</span><br>12:35-13:20</p>
           <p class="grid-item-h"><span class="cislo-hodiny">7</span><br>13:25-14:10</p>
           <p class="grid-item-h"><span class="cislo-hodiny">8</span><br>14:15-15:00</p>
           <p class="grid-item-h"><span class="cislo-hodiny">9+</span><br>15:00+</p>

           <% dny.forEach(den => { %>
             <p class="grid-item den-tydne" id="<%= den.datum %>">
               <span class="cislo-hodiny"><%= den.den %></span>
               <span class="datum-dne"><%= den.datum %></span>
             </p>
             
             <% for(let j=0; j <= 9; j++) { %>
               <div class="grid-item">
                 <% let hodina = den.hodiny.find(h => h.cislo === j) %>
                 <% if(hodina) { %>
                   <p class="room"><%= hodina.mistnost %></p>
                   <p class="period"><%= hodina.predmet === "volno" ? "" : hodina.predmet %></p>
                   <p class="group"><%= hodina.predmet !== "volno" ? hodina.skupina : "" %></p>
                   <p class="class"><%= hodina.trida %></p>
                   <p class="count" style="display: none;"></p>
                   <p class="theme" style="display: none;"><%= hodina.tema || "" %></p>
                   <% if (hodina.predmet !== "volno") { %>
                     <button id="detailButton" onclick="detailDisplay(this)">Téma</button>
                   <% } %>
                 <% } %>

                 <% 
                 // Helper function to get time index
                 function getTimeIndex(cas) {
                   const hodiny = {
                     1: ["7:10", "7:55"],
                     2: ["8:00", "8:45"],
                     3: ["8:50", "9:35"],
                     4: ["9:55", "10:40"],
                     5: ["10:50", "11:35"],
                     6: ["11:40", "12:25"],
                     7: ["12:35", "13:20"],
                     8: ["13:25", "14:10"],
                     9: ["14:15", "15:00"],
                     10: ["15:10", "15:55"]
                   };

                   for (let i = 1; i <= 10; i++) {
                     if (cas === hodiny[i][0] || cas === hodiny[i][1]) {
                       return i-1; // Odečítáme 1, protože j začíná od 0
                     }
                   }
                   return null;
                 }
                 %>

                 <% den.udalosti.forEach(event => { %>
                   <% if(event.casOd && event.casDo) { %>
                     <% if(j >= getTimeIndex(event.casOd) && j <= getTimeIndex(event.casDo)) { %>
                       <% if(event.typ == "celoskolni") { %>
                         <button class="event-button" onclick="showEventDetail(this)">
                           <%= event.nazev %>
                           <span class="event-type">celoskolni</span>
                           <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                         </button>
                       <% } %>
                       <% if(event.typ == "ucitelsky") { %>
                         <button class="event-button" onclick="showEventDetail(this)">
                           <%= event.nazev %>
                           <span class="event-type">ucitelsky</span>
                           <span class="event-target"><%= event.tykaSe %></span>
                           <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                         </button>
                       <% } %>
                       <% if(event.typ == "celotridni") { %>
                         <button class="event-button" onclick="showEventDetail(this)">
                           <%= event.nazev %>
                           <span class="event-type">celotridni</span>
                           <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                         </button>
                       <% } %>
                     <% } %>
                   <% } else { %>
                     <% // Pokud událost nemá časové údaje, zobrazí se v každé hodině %>
                     <% if(event.typ == "celoskolni") { %>
                       <button class="event-button" onclick="showEventDetail(this)">
                         <%= event.nazev %>
                         <span class="event-type">celoskolni</span>
                         <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                       </button>
                     <% } %>
                     <% if(event.typ == "ucitelsky") { %>
                       <button class="event-button" onclick="showEventDetail(this)">
                         <%= event.nazev %>
                         <span class="event-type">ucitelsky</span>
                         <span class="event-target"><%= event.tykaSe %></span>
                         <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                       </button>
                     <% } %>
                     <% if(event.typ == "celotridni") { %>
                       <button class="event-button" onclick="showEventDetail(this)">
                         <%= event.nazev %>
                         <span class="event-type">celotridni</span>
                         <span class="event-note" style="display: none;"><%= event.poznamka %></span>
                       </button>
                     <% } %>
                   <% } %>
                 <% }); %>
               </div>
             <% } %>
           <% }); %>
         </section>
       <% }); %>
     </div>
   </main>
</article>

