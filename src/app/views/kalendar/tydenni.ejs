<!DOCTYPE html>
<html lang="cs" style="max-height: 100vh; max-width: 100vw">
    <head style="flex: none">
        <%- include('../partials/head'); %>
        <style>
            .grid-container {
              display: grid;
              grid-template-columns: auto auto auto auto auto auto auto auto auto auto auto;
              padding: 10px;
            }
            .grid-item {
              border: 1px solid rgba(0, 0, 0, 0.8);
              padding-inline: 15px;
              padding-block: 45px;
              margin: 0;
              font-size: 18px;
              text-align: center;
            }
            .grid-item-h {
                border: 1px solid rgba(0, 0, 0, 0.8);
                padding: 15px;
                margin: 0;
                font-size: 18px;
                text-align: center;
            }
            </style>
    </head>
    <body style="display: flex; flex-direction: column; height: 100vh">
        <%- include('../partials/header'); %>
        <main
            style="
                padding: 1em;
                padding-bottom: 0;
                flex: auto;
                overflow-y: auto;
                background-image: linear-gradient(
                    45deg,
                    hsla(192, 100%, 50%, 0.1) 0%,
                    hsla(162, 100%, 50%, 0.1) 50%,
                    hsla(132, 100%, 50%, 0.1) 100%
                );
                display: flex;
            "
        >
            <article
                style="
                    width: 20vw;
                    min-width: 20vw;
                    margin-right: 1em;
                    overflow-y: auto;
                    resize: horizontal;
                "
            >
                <h1>Sidebar</h1>
                <p>
                    
                    <a style="color: black;" href="../kalendar/tydenni">Týdenní</a>
                    <br>
                    <a style="color: black;" href="../kalendar/">Měsíční</a>
                    
                </p>
            </article>
            <article style="flex: 3">
                <h1>Tydenní kalendář</h1>
                <div>
                    <% for(let i=0;i<10;i++) {%>
                        <section class="grid-container">
                                <p></p>
                                <p class="grid-item-h">7:10-7:55</p>
                                <p class="grid-item-h">8:00-8:45</p>
                                <p class="grid-item-h">8:50-9:35</p>
                                <p class="grid-item-h">9:55-10:40</p>
                                <p class="grid-item-h">10:50-11:35</p>
                                <p class="grid-item-h">11:40-12:25</p>
                                <p class="grid-item-h">12:35-13:20</p>
                                <p class="grid-item-h">13:25-14:10</p>
                                <p class="grid-item-h">14:15-15:00</p>
                                <p class="grid-item-h">15:00+</p>
                            <% let days = ["Po", "Út", "St", "Čt", "Pá"] %>
                            <% for(let i=0;i<5;i++) {%>
                                <p class="grid-item"><%= days[i] %></p>
                                <% for(let i=0;i<= 9;i++) {%>
                                    <p class="grid-item"></p>
                                <%}%>
                            <%}%>
                        </section>
                    <%}%>
                </div>
            </article>
        </main>
    </body>
</html>
