<!DOCTYPE html>
    <%- include('../partials/head'); %>
    <style>
      .grid-container {
        display: grid;
        grid-template-columns: auto auto auto auto auto auto auto auto auto auto auto;
        padding: 10px;
      }
      .grid-item {
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding-inline: 15px;
        padding-block: 45px;
        margin: 0;
        font-size: 18px;
        text-align: center;
      }
      .grid-item-h {
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 15px;
        margin: 0;
        font-size: 18px;
        text-align: center;
      }
    </style>
      <article style="flex: 3; overflow-y: auto; padding-top: 0;">
        <header>
          <h1>Kalendář</h1>
          <div role="group">
            <button
              hx-get="/kalendar/tydenni"
              hx-target="body"
              hx-swap="transition:true">
              Týdenní
            </button>
            <button
              class="outline"
              hx-get="/kalendar"
              hx-target="body"
              hx-swap="transition:true">
              Měsíční
            </button>
          </div>
        </header>

        <div>
          <% for(let i=0;i<10;i++) {%>
          <section class="grid-container">
            <p class="grid-item-h"><%= week[1] %></p>
            <p class="grid-item-h">7:10-7:55</p>
            <p class="grid-item-h">8:00-8:45</p>
            <p class="grid-item-h">8:50-9:35</p>
            <p class="grid-item-h">9:55-10:40</p>
            <p class="grid-item-h">10:50-11:35</p>
            <p class="grid-item-h">11:40-12:25</p>
            <p class="grid-item-h">12:35-13:20</p>
            <p class="grid-item-h">13:25-14:10</p>
            <p class="grid-item-h">14:15-15:00</p>
            <p class="grid-item-h">15:00+</p>
            <% let days = ["Po", "Út", "St", "Čt", "Pá"] %> <% for(let
            i=0;i<5;i++) {%>
            <p class="grid-item"><%= days[i] %></p>
            <% for(let j=0;j<= 9;j++) {%>
            <p class="grid-item"><%= rozvrh[j]%></p>
            <%}%> <%} %>
          </section>
          <%}%>
        </div>
      </article>

<%- include('../partials/tail') %>