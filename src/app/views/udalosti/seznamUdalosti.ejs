<!DOCTYPE html>
<%- include('../partials/head'); %>
        <style>
            article button {
                margin-bottom: 1em;
                padding: 0.75em 1.5em;
                width: 100%;
                background-color: #007bff;
                color: white;
                border: none;
                cursor: pointer;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: background-color 0.3s, transform 0.3s;
            }

            article button:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

            form input[type="submit"] {
                padding: 0.75em 1.5em;
                background-color: #007bff;
                color: white;
                border: none;
                cursor: pointer;
                width: auto;
            }

            form input[type="submit"]:hover {
                background-color: #0056b3;
            }

            form input,
            form select,
            form label {
                margin-bottom: 1em;
                margin-top: 1em;
            }
            /* Hlavní nastavení pro tabulku */
            table {
                width: 100%; /* Tabulka zabere 100 % šířky rodičovského elementu */
                table-layout: fixed; /* Zajistí, že šířky sloupců budou pevné */
                margin-bottom: 20px;
                border-collapse: collapse;
                max-width: 100%; /* Maximální šířka tabulky */
            }

            th, td {
                padding: 8px;
                border: 1px solid #ccc;
                white-space: normal; /* Zajistí, že text se zalomí */
                word-wrap: break-word; /* Zalamování dlouhých slov */
                overflow-wrap: break-word; /* Zajistí zalomení dlouhých slov pro moderní prohlížeče */
                max-width: 250px; /* Můžete upravit tuto hodnotu podle potřeby */
            }

            th {
                background-color: #f2f2f2;
            }

            /* Styl pro buňky poznámky - umožní dlouhý text vidět celý */
            td.poznamka {
                max-height: 150px; /* Maximální výška buňky s poznámkou */
                overflow-y: auto; /* Povolené vertikální skrolování, pokud je text příliš dlouhý */
            }

            /* Přidání skrolování do hlavního obsahu */
            main {
                padding: 1em;
                padding-bottom: 0;
                flex: auto;
                overflow-y: hidden;
                background-image: linear-gradient(
                    45deg,
                    hsla(192, 100%, 50%, 0.1) 0%,
                    hsla(162, 100%, 50%, 0.1) 50%,
                    hsla(132, 100%, 50%, 0.1) 100%
                );
                display: flex;
            }

            /* Styl pro sidebar - statický */
            article:first-of-type {
                width: 20vw;
                min-width: 20vw;
                margin-right: 1em;
                overflow-y: auto;
                resize: horizontal;
            }

            /* Nastavení hlavní oblasti s obsahem pro skrolování */
            article:last-of-type {
                flex: 3;
                max-height: 100%;
                overflow-y: auto;
                padding-right: 10px; /* přidání pravého odsazení pro zlepšení vzhledu při skrolování */
            }
        </style>

            <article
                style="
                    width: 20vw;
                    min-width: 20vw;
                    margin-right: 1em;
                    overflow-y: auto;
                    resize: horizontal;
                "
            >
            <h1>Sidebar</h1>
            <p>
            <a href="/udalosti">
                <button>Nová událost</button>
            </a>
            <a href="/udalosti/seznam">
                <button>Seznam událostí</button>
            </a>
            </p>
                
            </article>
                <article style="flex: 3">
                <h1>Seznam událostí</h1>
                <% 
                    // Mapa pro překlad hodnot do češtiny
                    const prekladVyberZadani = {
                        "celodenni": "Celodenní",
                        "vicedenni": "Vícedenní",
                        "casIDatum": "Čas a Datum"
                    };

                    const prekladTypAkce = {
                        "celotridni": "Celotřídní",
                        "budovy": "Budovy",
                        "celoskolni": "Celoškolní",
                        "ucitelsky": "Učitelský"
                    };

                    // Mapa pro překlad budov
                    const prekladBudov = {
                        "skolni101": "Školní 101",
                        "horska618": "Horská 618",
                        "horska59": "Horská 59",
                        "mladebuky": "Mladé Buky"
                    };
                    %>

                    <% for (var radek = 0; radek < seznamNaZobrazeni.length; radek++) { %>
                        <table border="1" style="border-collapse: collapse; margin-bottom: 20px;">
                            <thead>
                                <tr>
                                    <th colspan="2" style="background-color: #f2f2f2;"><%= seznamNaZobrazeni[radek].nazev %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Typ akce</strong></td>
                                    <td><%= prekladTypAkce[seznamNaZobrazeni[radek].typ] || seznamNaZobrazeni[radek].typ %></td>
                                </tr>
                                
                                <% if (seznamNaZobrazeni[radek].vyberZadani != "casIDatum") { %>
                                    <tr>
                                        <td><strong>Vyber zadání</strong></td>
                                        <td><%= prekladVyberZadani[seznamNaZobrazeni[radek].vyberZadani] || seznamNaZobrazeni[radek].vyberZadani %></td>
                                    </tr>

                                <% } if (seznamNaZobrazeni[radek].vyberZadani == "celodenni") { %>
                                    <tr>
                                        <td><strong>Datum</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].datum %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Poznámka</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].poznamka %></td>
                                    </tr>
                                <% } else if (seznamNaZobrazeni[radek].vyberZadani == "vicedenni") { %>
                                    <tr>
                                        <td><strong>Datum od</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].datum %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Datum do</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].datumDo %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Poznámka</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].poznamka %></td>
                                    </tr>
                                <% } else if (seznamNaZobrazeni[radek].vyberZadani == "casIDatum") { %>
                                    <tr>
                                        <td><strong>Datum</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].datum %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Čas od</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].casOd %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Čas do</strong></td>
                                        <td><%= seznamNaZobrazeni[radek].casDo %></td>
                                    </tr>
                                <% } %>

                                <% if (seznamNaZobrazeni[radek].typ == "celotridni" || seznamNaZobrazeni[radek].typ == "budovy") { %>
                                    <tr>
                                        <td><strong>Týká se</strong></td>
                                        <td>
                                            <% if (seznamNaZobrazeni[radek].typ == "budovy") { %>
                                                <%= prekladBudov[seznamNaZobrazeni[radek].tykaSe] || seznamNaZobrazeni[radek].tykaSe %>
                                            <% } else { %>
                                                <%= seznamNaZobrazeni[radek].tykaSe %>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    <% } %>
            </article>
        </main>
