<style>
    .timeline {
            margin-top: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            min-height: 60vh;
            position: relative;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 8px;
        top: 20px;
        width: 4px;
        height: calc(100% - 40px);
        background-color: #1e3c72;
    }
    
    .timeline-item {
        display: flex;
        position: relative;
        padding: 20px 0;
    }
    
    .timeline-dot {
        width: 20px;
        height: 20px;
        background-color: #1e3c72;
        border-radius: 50%;
        margin-right: 15px;
        margin-top: 7px;
        flex-shrink: 0;
        position: relative;
        z-index: 1;
        background-color: #1e3c72;
        border: 4px solid #1e3c72;
        box-sizing: border-box;
    }
    
    .timeline-content {
        flex: 1;
        font-size: 1.35em;
        line-height: 1.5;
    }
</style>
